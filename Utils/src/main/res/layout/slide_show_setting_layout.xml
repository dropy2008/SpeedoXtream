<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/slideshow_setting_padding"
              android:paddingRight="@dimen/slideshow_setting_padding"
              android:paddingTop="@dimen/slideshow_setting_padding"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/autoplay_speed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_play_speed"
                android:layout_marginLeft="@dimen/slideshow_setting_middle_margins"/>

        <RadioGroup
                android:id="@+id/slide_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/slideshow_setting_middle_margins"
                android:orientation="horizontal">

            <RadioButton
                    android:id="@+id/slow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slideshow_setting_middle_margins"
                    android:text="Slow"
                    android:textSize="@dimen/slideshow_setting_title_size"/>

            <RadioButton
                    android:id="@+id/middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slideshow_setting_middle_margins"
                    android:text="Middle"
                    android:textSize="@dimen/slideshow_setting_title_size"/>

            <RadioButton
                    android:id="@+id/fast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slideshow_setting_middle_margins"
                    android:text="Fast"
                    android:textSize="@dimen/slideshow_setting_title_size"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/slideshow_setting_padding"
            android:orientation="horizontal">

        <Button
                android:id="@+id/confirm_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/slideshow_setting_middle_margins"
                android:minWidth="@dimen/slideshow_setting_button_width"
                android:minHeight="@dimen/slideshow_setting_button_height"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textSize="@dimen/slideshow_setting_title_size"/>

        <Button
                android:id="@+id/cancel_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/slideshow_setting_middle_margins"
                android:minWidth="@dimen/slideshow_setting_button_width"
                android:minHeight="@dimen/slideshow_setting_button_height"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="@dimen/slideshow_setting_title_size"/>

    </LinearLayout>

</LinearLayout>
