<resources>
    <!-- The color of button highlights and widgets. -->
    <color name="accent">#EE962D</color>
    <!-- Used for the text of a selected item's title and description.
         Also used for button text, Splash screen text, and read more dialog text. -->
    <color name="primary_text">#E6FFFFFF</color>
    <!-- Used for the text on the card views and playback progress bar text. -->
    <color name="secondary_text">#FFFFFFFF</color>
    <!-- Background color for focused action button -->
    <drawable name="action_button_focused">@drawable/btn_generic_focused</drawable>
    <!-- Background color for normal state of action button -->
    <drawable name="action_button_normal">@drawable/btn_normal</drawable>
    <!-- URL the end user must visit to authenticate their device for second screen login -->
    <string name="second_screen_login_instruction_line_2">Visit YOUR_AUTHENTICATION_URL</string>
    <!-- The company logo to display on the second screen login screen -->
    <drawable name="company_logo">@drawable/logo</drawable>
    <!-- terms of use file -->
    <string name="terms_of_use_file">terms_of_use.html</string>
    <!-- A default light device font used for body text -->
    <string name="default_light_font">Roboto Light</string>
    <!-- A default bold device font used for titles -->
    <string name="default_bold_font">Roboto Bold</string>
    <!-- A default regular device font used for buttons and subtitles -->
    <string name="default_regular_font">Roboto Regular</string>

</resources>
